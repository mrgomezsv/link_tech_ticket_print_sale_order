<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="report_ticket_sale_order" model="ir.actions.report">
        <field name="name">link_tech_ticket_print_sale_order</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb</field>
        <field name="report_name">link_tech_ticket_print_sale_order.report_ticket_sale_order</field>
        <field name="report_file">link_tech_ticket_print_sale_order.report_ticket_sale_order</field>
    </record>

    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.link_tech_ticket_print_sale_order</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <group>
                    <field name="amount_total"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>