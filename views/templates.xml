<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_ticket_sale_order" name="Ticket de Venta">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">

                        <!-- Cabecera (Header) -->
                        <div style="text-align: center; font-size: 14px; width: 100%; border-bottom: 1px solid #000; margin-bottom: 10px;">
                            <div>
                                <div>
                                    <t t-esc="o.company_id.name and o.company_id.name.upper() or ''"/>
                                </div>
                                <div>
                                    <t t-esc="o.company_id.street"/>
                                </div>
                                <div>
                                    <t t-esc="o.company_id.vat"/>
                                </div>
                                <div>
                                    <t t-esc="o.company_id.phone"/>
                                </div>
                                <div>
                                    <t t-esc="o.company_id.email"/>
                                </div>
                                <div>
                                    Presupuesto:
                                    <t t-esc="o.name"/>

                                </div>
                            </div>
                        </div>

                        <!-- Cuerpo (Body) -->
                        <div>
                            <table style="width: 100%; text-align: center; font-size: 14px;">
                                <thead>
                                    <tr>
                                        <th>Cantidad</th>
                                        <th>Descripción</th>
                                        <th>SubTotal</th>
                                    </tr>
                                </thead>
                                <tbody style="text-align: center; font-size: 14px;">
                                    <tr t-foreach="o.order_line" t-as="line">
                                        <td>
                                            <span t-field="line.product_uom_qty"/>
                                        </td>
                                        <td>
                                            <span t-field="line.product_id.name"/>
                                        </td>
                                        <td>
                                            <span t-field="line.price_subtotal"
                                                  t-options='{"widget": "monetary", "currency_field": "o.currency_id", "currency_field_digits": 2, "currency_field_position": "before"}'/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <!-- Pie de Página (Footer) -->
                        <div style="text-align: center; font-size: 14px;">
                            <p style="text-align: right; font-size: 14px;">
                                Total....:
                                <span t-field="o.amount_total"
                                      t-options='{"widget": "monetary", "currency_field": "o.currency_id", "currency_field_digits": 2, "currency_field_position": "before"}'/>
                            </p>
                            <div style="width: 100%; border-top: 1px solid #000; border-bottom: 1px solid #000;">
                                <p>GRACIAS POR SU COMPRA</p>
                                <div style="margin-bottom: 10px;">
                                    <t t-esc="o.company_id.website"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
